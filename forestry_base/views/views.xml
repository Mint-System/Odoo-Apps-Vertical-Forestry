<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="show_position" model="ir.ui.view">
    <field name="name">sale.view_order_form.show_position</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/tree[1]/field[@name='sequence']" position="after">
        <field name="position"/>
      </xpath>
    </field>
  </record>

  <record id="document_list" model="ir.ui.view">
    <field name="name">Document List</field>
    <field name="model">forestry_base.document</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="value"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="forestry_base.document_action">
    <field name="name">Document Action</field>
    <field name="res_model">forestry_base.document</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record model="ir.actions.server" id="forestry_base.document_server_action">
    <field name="name">Document Server Action</field>
    <field name="model_id" ref="model_forestry_base_document"/>
    <field name="state">code</field>
    <field name="code">
      action = {
        "type": "ir.actions.act_window",
        "view_mode": "tree,form",
        "res_model": model._name,
      }
    </field>
  </record>

  <menuitem name="forestry_base" id="forestry_base.menu_root"/>

  <menuitem name="Documents" id="forestry_base.documents_menu" parent="forestry_base.menu_root"/>
  <menuitem name="Configurations" id="forestry_base.configuration_menu" parent="forestry_base.menu_root"/>

  <menuitem name="Documents" id="forestry_base.document_menu" parent="forestry_base.documents_menu" action="forestry_base.action"/>
  <menuitem name="Server to list" id="forestry_base.server_action_menu" parent="forestry_base.configuration_menu" action="forestry_base.server_action"/>

</odoo>